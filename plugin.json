{
    "name": "Babel",
    "version": "1.0",
    "description": "Dislay your content in multiple languages.",
    "demo": "http://hipsterdoofu.us/babel/",
    "author": {
        "name": "Hipster Doofus",
        "link": "http://hipsterdoof.us"
    },

    "data": {
        "separator": {
            "label": "Separator",
            "info": "Enter one or more characters as the separator you will use when writing in Koken to distinguish between languages. Babel will automatically separate languages using these characters so you should choose a combination you will not otherwise want to use.",
            "type": "string",
            "placeholder": "eg. |||",
            "validation": {
                "type": "not_empty",
                "error_message": "Please enter a separator."
            }
        },

        "l1": {
            "label": "First Language",
            "info": "",
            "type": "select",
            "options": [
                { "label": "English", "value": "English|en" },
                { "label": "Japanese", "value": "Japanese|ja" }
            ]
        },

        "l2": {
            "label": "Second Language",
            "info": "",
            "type": "select",
            "options": [
                { "label": "Japanese", "value": "Japanese|ja" },
                { "label": "English", "value": "English|en" }
            ]
        }
    }
}